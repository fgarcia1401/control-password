<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonDefault" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_rounded_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DefaultLogin" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>

    <style name="ErrorLogin" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>


    <style name="primaryAppearanceTil" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTilHintActive</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/til_line_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/text_input_layout_hint_color</item>
        <item name="colorPrimary">@color/colorTilHintActive</item>
        <item name="colorControlActivated">@color/colorTilHintActive</item>
        <item name="android:textColorHighlight">@color/colorTilHintActive</item>
    </style>

    <style name="error_appearance_til" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
